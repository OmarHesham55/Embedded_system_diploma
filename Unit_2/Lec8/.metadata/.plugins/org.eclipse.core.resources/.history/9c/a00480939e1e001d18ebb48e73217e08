#include <stdio.h>
#include <string.h>

int main(){
	int mainArr[10];
	int i,j,n;
	printf("how many numbers you will enter:");
	fflush(stdin); fflush(stdout);
	scanf("%d",&n);
	printf("Enter the numbers");
	for(i=0;i<n;i++){
		fflush(stdin); fflush(stdout);
		scanf("%d",&mainArr[i]);
	}
	printf("you entered:");
	for(j=0;j<n;j++){
		printf("%d ",mainArr[j]);
	}
	printf("\nfor reverse numbers:");
	for(j=n; j>=0; j--){
		printf("%d ",mainArr[j]);
	}
}
