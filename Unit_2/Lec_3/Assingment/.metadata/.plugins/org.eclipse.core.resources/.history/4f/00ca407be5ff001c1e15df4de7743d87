#include "stdio.h";

int main(){
	float x,y;
	char operand;
	printf("Enter first number");
	fflush(stdin); fflush(stdout);
	scanf("%f",&x);

	printf("Enter second number");
	fflush(stdin); fflush(stdout);
	scanf("%f",&y);

	printf("Enter which calculation you want");
	fflush(stdin); fflush(stdout);
	scanf("%c",&operand);

	if(operand == '+'){
		printf("%f",x+y);
	}else if(operand == '-'){
		printf("%f",x-y);
	}else if(operand == '*'){
		printf("%f",x*y);
	}else if(operand == '/'){
		printf("%f",x/y);
	}else{
		printf("Enter a right symbol");
	}

}
