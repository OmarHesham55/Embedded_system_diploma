#include "stdio.h";

int main(){
	float x,y;
	char symbol;
	printf("Enter first number");
	fflush(stdin); fflush(stdout);
	scanf("%f",&x);

	printf("Enter second number");
	fflush(stdin); fflush(stdout);
	scanf("%f",&y);

	printf("Enter which calculation you want");
	fflush(stdin); fflush(stdout);
	scanf("%f",&symbol);

	switch(symbol){
	case +:{
		printf("%f",x+y);
	}
	break;

	case - :
		printf("%f",x-y);

	break;

	case *:{
		printf("%f",x*y);
	}
	break;

	case /:{
		printf("%f",x/y);
	}
	break;
	default:{
		printf("HHHHH");
		break;
	}
	}
}
