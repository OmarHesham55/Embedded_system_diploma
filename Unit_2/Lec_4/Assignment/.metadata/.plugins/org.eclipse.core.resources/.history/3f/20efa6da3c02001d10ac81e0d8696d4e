#include "stdio.h"

int main(){
	int arr[100],ele,i,num,index,val=1;
	int extension[100];

	printf("Enter the No. of elements: ");
	fflush(stdin); fflush(stdout);
	scanf("%d",&ele);

	for(i=0; i<ele; i++){
		arr[i] = val;
				val++;
		printf("%d ",arr[i]);
	}

	printf("\nEnter the No. to be inserted and the Location:\n");
	fflush(stdin); fflush(stdout);
	scanf("%d %d",&num,&index);


	for(i=0; i<ele; i++){
		if(i == index-1){
			arr[i] = num;
		}
		printf("%d ",extension[i] = arr[i]);
	}


}
