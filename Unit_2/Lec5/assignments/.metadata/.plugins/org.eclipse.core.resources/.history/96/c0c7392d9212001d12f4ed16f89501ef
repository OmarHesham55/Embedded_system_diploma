#include "stdio.h"
#include "string.h"

void reverse();

int main(){

	printf("Enter a sentence:");
	fflush(stdin); fflush(stdout);
	reverse();

}

void reverse(){
	char c;

	scanf("%c",&c); //omar
	if(c != '\n'){
		reverse();
		printf("%c",c);
	}
}
