#include "stdio.h"
#include "string.h"

void reverse();

int main(){

	printf("Enter a sentence:");
	reverse();

}

reverse(){
	char c;
	fflush(stdin); fflush(stdout);
	scanf("%c",&c);
	if(c != "\n"){
		reverse();
		printf("%c",c);
	}
}
